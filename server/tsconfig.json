{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES2023",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../dist",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false
    }
}